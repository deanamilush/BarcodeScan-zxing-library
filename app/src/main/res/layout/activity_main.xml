<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="722dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">

        <!--        android:textAppearance="@s"-->

        <!-- android:layout_ceterHorizontal="true"-->

        <!--android:textAppearnce="@style/TextAppearance.AppCompat.Body1" />-->

        <Button
            android:id="@+id/scanNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="scanNow"
            android:selectAllOnFocus="true"
            android:text="@string/scan" />

        <TextView
            android:id="@+id/am_tv_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/disini_format"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/am_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/disini_conten"
            android:textIsSelectable="true" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>